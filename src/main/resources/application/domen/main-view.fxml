<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="360.0" prefWidth="540.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.domen.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox prefHeight="350.0" prefWidth="500.0" spacing="20.0">
        <TableView fx:id="tableView" prefHeight="331.0" prefWidth="392.0">
            <columns>
                <TableColumn fx:id="columnId" prefWidth="75.0" text="Номер" />
                <TableColumn fx:id="columnName" prefWidth="75.0" text="Название" />
                <TableColumn fx:id="columnTime" prefWidth="75.0" text="Время" />
                <TableColumn fx:id="columnStatus" prefWidth="75.0" text="Статус" />
            </columns>
        </TableView>
        <VBox prefHeight="320.0" prefWidth="269.0">
            <Label text="Название:" />
            <TextField fx:id="nameTextField" promptText="Введите название">
                <VBox.margin>
                    <Insets bottom="5.0" />
                </VBox.margin>
            </TextField>
            <Label text="Статус:" />
            <ComboBox fx:id="statusComboBox" prefHeight="25.0" prefWidth="200.0" promptText="Выберите статус">
                <VBox.margin>
                    <Insets bottom="5.0" />
                </VBox.margin>
            </ComboBox>
            <Label text="Время:" />
            <DatePicker fx:id="timeDatePicker" prefHeight="25.0" prefWidth="200.0" promptText="Выберите дату">
                <VBox.margin>
                    <Insets bottom="100.0" />
                </VBox.margin>
            </DatePicker>
            <Button mnemonicParsing="false" onAction="#addButtonClickedHandler" prefHeight="25.0" prefWidth="200.0" text="Добавить">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#updateButtonClickedHandler" prefHeight="25.0" prefWidth="200.0" text="Обновить">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#deleteButtonClickedHandler" prefHeight="25.0" prefWidth="200.0" text="Удалить" />
        </VBox>
    </HBox>
</VBox>
