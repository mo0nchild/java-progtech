<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="360.0" prefWidth="480.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.domen.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER" prefHeight="52.0" prefWidth="600.0" spacing="10.0">
        <VBox prefHeight="52.0" prefWidth="145.0" spacing="5.0">
            <Label text="Скорость обновления:" />
            <Slider fx:id="speedSlider" blockIncrement="1.0" max="20" min="1" value="1.0" />
        </VBox>
        <Button mnemonicParsing="false" onAction="#refreshButtonClickedHandler" text="Обновить" />
    </HBox>
    <TabPane prefHeight="374.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Просмотр фото">
            <BorderPane fx:id="imageContent" prefHeight="200.0" prefWidth="200.0" />
        </Tab>
        <Tab text="Текущее время">
            <BorderPane fx:id="timeContent" prefHeight="200.0" prefWidth="200.0" />
        </Tab>
        <Tab text="Крутяшка">
            <BorderPane fx:id="spinnerContent" prefHeight="200.0" prefWidth="200.0" />
        </Tab>
    </TabPane>
</VBox>
